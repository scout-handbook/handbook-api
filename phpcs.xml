<?xml version="1.0"?>
<ruleset>
	<file>./</file>
	<exclude-pattern>node_modules/*/*</exclude-pattern>
	<exclude-pattern>vendor/*/*</exclude-pattern>
	<exclude-pattern>*/Skaut/OdyMarkdown/v*/styles.php</exclude-pattern>

	<config name="installed_paths" value="vendor/phpcompatibility/php-compatibility"/>
	<!--config name="installed_paths" value="vendor/phpcompatibility/php-compatibilityvendor/slevomat/coding-standard"/-->

	<arg name="basepath" value="./"/>
	<arg name="colors"/>
	<arg name="extensions" value="php,php.sample"/>
	<arg value="s"/>
	<arg name="parallel" value="8"/>

	<config name="testVersion" value="7.1-"/>

	<rule ref="PHPCompatibility"/>
	<rule ref="PSR2">
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
	</rule>
</ruleset>
